@model IEnumerable<Recipe>
@{
    ViewBag.Title = "Recipe List";
}
        <header class="text-center">
            <h1>Best Recipes</h1>
            <h2>Take a look on your recipe list</h2>
            <a class="btn btn-outline-primary" asp-action="Index">Home</a>
            <a class="btn btn-primary" asp-action="RecipeList">Recipe List</a>
            <a class="btn btn-outline-primary" asp-action="AddRecipe">Add</a>
        </header>
        <br />
        <table class="table table-sm table-bordered table-hover">
            <thead class="thead-light">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Serves</th>
                    <th></th>
                </tr>
            </thead>
           
            <tbody>
                @foreach (Recipe r in Model)
                 {
                    @await Html.PartialAsync("RecipeLine", r)
                 }
            </tbody>
        </table>