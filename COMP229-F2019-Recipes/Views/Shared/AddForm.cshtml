@model Recipe

    <form class="p-3" asp-action="AddRecipe" method="post">
        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="Name">Name</label>
                <div><span asp-validation-for="Name" class="text-danger"></span></div>
                <input class="form-control" asp-for="Name" />
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-10">
                <label asp-for="Category">Category</label>
                <div><span asp-validation-for="Category" class="text-danger"></span></div>
                <select class="form-control" asp-for="Category">
                    <option null>--Select--</option>
                    <option value="1">Desserts</option>
                    <option value="2">Main Dishes</option>
                    <option value="3">Miscellaneous</option>
                </select>
            </div>
            <div class="form-group col-md-2">
                <label asp-for="Serves">Serves</label>
                <div><span asp-validation-for="Serves" class="text-danger"></span></div>
                <select class="form-control" asp-for="Serves">
                    <option null>--Select--</option>
                    <option value="1">1</option>
                    <option value="2">2 </option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                </select>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Ingredients">Ingredients</label>
                <div><span asp-validation-for="Ingredients" class="text-danger"></span></div>
                <textarea class="form-control" rows="8" asp-for="Ingredients"></textarea>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Directions">Directions</label>
                <div><span asp-validation-for="Directions" class="text-danger"></span></div>
                <textarea class="form-control" rows="8" asp-for="Directions"></textarea>
            </div>
        </div>
        <br />
        <div class="text-right">
            <button class="btn btn-primary" type="submit">Save</button>
            <button class="btn btn-primary" asp-action="Index" asp-controller="Home">Cancel</button>
        </div>
    </form>