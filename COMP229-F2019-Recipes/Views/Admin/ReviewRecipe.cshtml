@model Recipe
@{
    ViewBag.Title = "Review Recipe";

}
<div class="panel panel-success">
    <div class="panel-body">

        <form class="p-3" asp-action="ReviewRecipe" method="post">
            <input type="hidden" asp-for="RecipeId" />
            <input type="hidden" asp-for="Name" />
            
            <div class="form-row">
                <div class="form-group  col-md-1">
                    <label asp-for="RecipeId">Id</label>
                    <input class="form-control" disabled="disabled" asp-for="RecipeId" />
                </div>
                <div class="form-group  col-md-11">
                    <label asp-for="Name">Name</label>
                    <input class="form-control" disabled="disabled" asp-for="Name" />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-12">
                    <label asp-for="Comment">Comments</label>
                    <textarea class="form-control" rows="8" asp-for="Comment"></textarea>
                </div>
            </div>

            <br />
            <div class="text-right">
                <button class="btn btn-primary" type="submit">Save</button>
                <button class="btn btn-primary" asp-action="Index" asp-controller="Home">Cancel</button>
            </div>
        </form>
    </div>
</div>
